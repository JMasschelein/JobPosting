 <%= form_for [@job.category, @job] do |f| %>
   <% if job.errors.any? %>
     <div class="alert alert-danger">
       <h4><%= pluralize(job.errors.count, "error") %>.</h4>
       <ul>
         <% job.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
  <%= form_group_tag(job.errors[:title]) do %>
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
   <% end %>
   <%= form_group_tag(job.errors[:description]) do %>
         <%= f.label :description %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
   <% end %>
       
   <%= form_group_tag(job.errors[:deadline]) do %>
         <%= f.label :deadline %>
         <%= f.text_field :deadline, class: 'form-control', placeholder: "Enter post title" %>
   <% end %>     
       
   <%= form_group_tag(job.errors[:budget]) do %>
         <%= f.label :budget %>
         <%= f.text_field :budget, class: 'form-control', placeholder: "Enter post title" %>
   <% end %>     
       
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
<% end %>