 <h1><%= @category.name %></h1>
 
 <%= link_to "Edit Category", edit_category_path, class: 'btn btn-success' %>
<%= button_to "Delete Category", @category, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this category?' } %>
 
 <div class="row">
   <div class="col-md-8">
     <p class="lead"><%= @category.description %></p>
     <% @category.jobs.each do |job| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">

             <%= link_to job.title, category_job_path(@category, job) %>
           </h4>
           <small>
             submitted <%= time_ago_in_words(job.created_at) %> ago <br>
             <%= job.comments.count %> Comments
           </small>
           </h4>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     <%= link_to "New Job", new_category_job_path(@category), class: 'btn btn-success' %>
   </div>
 </div>